<!DOCTYPE html>
<html lang="es">
    <%- include( '../partials/head') %>
    
    <body>
    
        <%- include('../partials/header') %>

        <%- include('../partials/back') %> 

        <main>
            <article class="prod-detail">
                <div class="img-container">
                    <div class="img-principal">
                        <img src = "/images/<%= product.img %> ">
                    </div>

                    <div class="slider-buttons-container"> 
                        <div class="items"> 
                            <a href="#"><i class="fas fa-chevron-left"></i></a>
                        </div>
                        <div class="items">
                            <a href="#"><i class="fas fa-chevron-right"></i></a>
                        </div> 
                    </div>
                    
                    <div class="img-sec">
                        <img src = "/images/img-ropa.jpeg" >
                    </div>
                    
                    <div class="img-sec">
                        <img src = "/images/img-ropa.jpeg" >
                    </div>
                </div>

                <div class="product-description">
                    <p class="nombre-prod"> <%= product.nombre %>  </p>

                    <div class="stars">
                        <div class="score">
                            <% for( let index = 1; index <= 5; index++ ) { %>

                                <% if (index <= product.puntos) { %>
                                    <i class="far fa-star" style="color: #d4b073;"></i>
                                 
                                <% }else { %>
                                    <i class="far fa-star"></i>
                                <% } %> 
                            
                            <% } %> 

                        </div>
                        <p> 127437 Reviews </p>
                    </div>

                    <p class="precio"> $<%= product.precio %>  </p>

                    <div class="colors"> <!-- agregar al objeto una array de colores y iterarlos con un foreach-->
                        <% product.colores.forEach(element => { %>
                            <a href="#"><i class="fas fa-circle" style="color:<%= element %>"></i></a>
                        <% }) %>
                    </div> 

                    <div class="talle">
                        <% product.talles.forEach(element => { %>
                            <a href="#"> <p><%= element %> </p> </a> 
                        <% }) %>
                    </div>

                    <div class="guia">
                        <a href="#">Ver guia de Talles </a>
                    </div>
                    
                    <div class="cantidad">
                        <form action="/" method="POST">
                            <label for="cant">
                                Cantidad: 
                            </label>
                            <input type="number" id="cant" name="cant" min="1" value="1">
                        </form>
                    </div>

                    <div class="carrito">
                        <a href="#">Agregar a carrito</a>
                    </div>
                    <div class="locales">
                        <a href="#">Ver locales donde esta disponible el producto</a>
                    </div>   

                    <div class = "description">
                        <p class="title"> Descripci√≥n</p>
                        <p class="content"> <%= product.descripcion %> 
                        </p>
                    </div>
                </div>
   
            </article>

            <div class="title-recom">
                <p class= "title-recom"> Tambien te puede gustar </p>
            </div>

            <div class="Recomendaciones">
                <article>
                    <a href="#">
                        <img src = "/images/img-macbook-pro-2019.jpg">
                    </a>
                    <p>MacBook</p>
                    <p>$20.000</p>
                </article>

                <article>
                    <a href="#">
                        <img src = "/images/img-macbook-pro-2019.jpg">
                    </a>
                    <p>MacBook</p>
